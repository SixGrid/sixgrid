{
    "name": "sixgrid",
    "version": "0.3.7-2",
    "author": "Kate Ward <kate@dariox.club>",
    "description": "Open-Source e621 Desktop App",
    "license": "apache-2.0",
    "main": "./dist/electron/main.js",
    "scripts": {
        "build": "node .electron-vue/build.js && electron-builder",
        "build:wintux": "node .electron-vue/build.js && electron-builder -wl",
        "build:tux": "node .electron-vue/build.js && electron-builder -l",
        "build:dir": "node .electron-vue/build.js && electron-builder --dir",
        "build:clean": "cross-env BUILD_TARGET=clean node .electron-vue/build.js",
        "build:web": "cross-env BUILD_TARGET=web node .electron-vue/build.js",
        "dev": "node .electron-vue/dev-runner.js",
        "dev:steam": "node .electron-vue/dev-runner.js --steam",
        "pack": "npm run pack:main && npm run pack:renderer",
        "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.main.config.js",
        "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.renderer.config.js"
    },
    "build": {
        "productName": "sixgrid",
        "appId": "pet.kate.sixgrid",
        "directories": {
            "output": "build",
            "buildResources": "dist"
        },
        "files": [
            "dist/electron/**/*"
        ],
        "asar": false,
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "mac": {
            "icon": "build/icons/icon.icns"
        },
        "win": {
            "icon": "build/icons/icon.ico",
            "target": [
                {
                    "target": "dir",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "msi",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "linux": {
            "icon": "build/icons",
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "dir",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        }
    },
    "dependencies": {
        "@electron/remote": "^2.1.2",
        "axios": "^0.27.2",
        "dayjs": "^1.11.5",
        "electron-log": "^4.4.8",
        "jquery": "^3.6.0",
        "js-bbcode-parser": "^4.0.0",
        "libsixgrid": "^1.1.5",
        "moment": "^2.29.4",
        "remove-markdown": "^0.3.0",
        "request": "^2.88.2",
        "steamworks.js": "^0.3.1",
        "sweetalert": "^2.1.2",
        "tinytoolbox": "^0.0.9",
        "toastr": "^2.1.4",
        "vue": "^2.5.16",
        "vue-electron": "^1.0.6",
        "vue-material": "^1.0.0-beta-15",
        "vue-router": "^3.0.1",
        "vue-toastr-2": "^0.0.10",
        "vuex": "^3.0.1",
        "vuex-electron": "^1.0.0"
    },
    "devDependencies": {
        "@types/node": "^16.18.76",
        "ajv": "^6.5.0",
        "archiver": "^5.3.1",
        "cfonts": "^2.1.2",
        "chalk": "^2.4.1",
        "copy-webpack-plugin": "^4.5.1",
        "cross-env": "^5.1.6",
        "css-loader": "^5.2.7",
        "del": "^3.0.0",
        "devtron": "^1.4.0",
        "electron": "^28.2.0",
        "electron-builder": "^23.3.3",
        "electron-debug": "^1.5.0",
        "electron-devtools-installer": "^2.2.4",
        "electron-rebuild": "^3.2.7",
        "esbuild-loader": "^2.19.0",
        "file-loader": "^1.1.11",
        "html-webpack-plugin": "^3.2.0",
        "listr": "^0.14.3",
        "mini-css-extract-plugin": "^0.4.5",
        "multispinner": "^0.2.1",
        "node-loader": "^0.6.0",
        "postcss-loader": "^4.3.0",
        "sass-loader": "^10.2.1",
        "style-loader": "^0.21.0",
        "tar": "^6.1.11",
        "ts-loader": "^8.4.0",
        "typescript": "^4.8.2",
        "url-loader": "^1.0.1",
        "vue-html-loader": "^1.2.4",
        "vue-loader": "^15.2.4",
        "vue-style-loader": "^4.1.0",
        "vue-template-compiler": "^2.5.16",
        "webpack": "^4.46.0",
        "webpack-cli": "^3.0.8",
        "webpack-dev-server": "^3.11.3",
        "webpack-hot-middleware": "^2.22.2",
        "webpack-merge": "^4.1.3"
    }
}
